= render 'form_errors', model: @registration

= form_for [@registration.student, @registration], url: student_registration_path(@registration.student, @registration) do |f|
  %h3.display-4= @registration.student
  %p= @registration.teacher
  %p= I18n.l(@registration.activity.date, format: :complete)
  .form-group
    = f.label :activity_id, 'Activity'
    = f.select :activity_id, @activities.collect { |a| [a.name, a.id] }, {include_blank: 'Choose...'}, required: true, class: 'form-control'
  = f.submit 'Save', class: 'btn btn-success'
